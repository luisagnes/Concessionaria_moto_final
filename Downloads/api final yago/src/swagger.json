{
    "openapi": "3.0.3",
    "info": {
        "title": "PI-Backend_final_project",
        "description": "API Rest da concessionaria de motos",
        "version": "0.0.1"
    },
    "paths": {
        "/estoque": {
            "description": "Estoque de motos",
            "get": {
                "description": "lista em estoque na Concessionária",
                "tags": ["Estoque"],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Estoque"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/estoque/{id}": {
            "get": {
                "description": "Exibe sua moto em estoque pelo ID",
                "tags":["Estoque"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Estoque"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Não encontrado"
                    }
                }
            }
        },
        "/criar/estoque": {
            "post": {
                "description": "Adiciona/cria um estoque",
                "tags": ["Estoque"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Estoque"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cobrança criada",
                        "content": {}
                    }
                }
            }
        },
        "/atualizar/estoque/{id}": {
            "put": {
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "description": "Atualizar quantidade do estoque",
                "tags": ["Estoque"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Estoque"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Estoque atualizado 100% com sucesso",
                        "content": {}
                    },
                    "404": {
                        "description": "Não encontramos sua moto"
                    }
                }
            }
        },
        "/excluir/estoque/{id}": {
            "delete": {
                "description": "Deleta um Estoque pelo ID",
                "tags":["Estoque"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "item do estoque deletado com sucesso",
                        "content": {}
                    }
                }
            }
        },
        "/compre": {
            "description": "compre sua moto",
            "get": {
                "description": "lista de motos",
                "tags":["compre"],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/compre"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/compre/{id}": {
            "get": {
                "description": "Exibe uma opção pelo ID",
                "tags":["compre"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/compre"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Não encontrado"
                    }
                }
            }
        },
        "/criar/compre": {
            "post": {
                "description": "Cria uma requisição de compra de moto",
                "tags": ["compre"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/compre"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "moto comprada",
                        "content": {}
                    }
                }
             } 
        },
        "/atualizar/compre/{id}": {
            "put": {
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "description": "Atualizar moto",
                "tags": ["compre"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/compre"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "compra cancelada com sucesso",
                        "content": {}
                    },
                    "404": {
                        "description": "Não encontrado"
                    }
                }
            }
        },
        "/excluir/compre/{id}": {
            "delete": {
                "description": "Deletar moto que não existe mais, pelo ID",
                "tags":["compre"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "moto cancelada com sucesso",
                        "content": {}
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Estoque": {
                "type": "object",
                "properties": {
                    "retirada": {
                        "type": "string",
                        "example": "2013/14"
                    },
                    "Modelo": {
                        "type": "object",
                        "properties": {
                            "nome": {
                                "type": "string",
                                "example": "moto 1"
                            }
                        }
                    },
                    "avaliação": {
                        "type": "string",
                        "example": "8.8"
                    },
                    "Preço": {
                        "type": "string",
                        "example": "R$52.000,00"
                    }
                }
            },
            "compre": {
                "type": "object",
                "properties": {
                    "compacto": {
                        "type": "string",
                        "example": "11/06/2022"
                    },
                    "vencimento": {
                        "type": "string",
                        "example": "11/06/2022"
                    },
                    "valor": {
                        "type": "string",
                        "example": "R$38.000,00"
                    },
                    "situação": {
                        "type": "string",
                        "example": "Pago"
                    }
                }
            }
        }
    }
}